<div class="container-fluid">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <form {{action "login" on="submit"}}>
      <div class="form-group">
        <label for="username">Email</label>
        {{!-- <input type="email" class="form-control" id="email" name="username" placeholder="Email"> --}}
        {{input type="email" class="form-control" name="username" value=username placeholder="Email"}}
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        {{!-- <input type="password" class="form-control" id="password" name="password" placeholder="Password"> --}}
        {{input type="password" class="form-control" name="password" value=password placeholder="Password"}}
      </div>
      <button type="submit" class="btn btn-default">Login</button>
    </form>
  </div>
</div>
